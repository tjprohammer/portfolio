{
    "compilerOptions": {
      "sourceMap": true,
      "target": "es5",
      "allowJs": true,
      "jsx": "react",
      "module": "es6",
      "moduleResolution": "node",
      "experimentalDecorators": true,
      "declaration": true,
      "removeComments": true,
      "noImplicitReturns": true,
      "noUnusedLocals": true,
      "strict": true,
      "checkJs": true,
      "outDir": "build",
      "composite": true,
      "lib": ["es6", "es7", "dom"],
      "baseUrl": "src",
      "paths": {
        "app/*": ["./app/*"]
      },
      "allowSyntheticDefaultImports": true
    },
    "include": ["src/**/*"],
    "exclude": ["build", "node_modules"]
  }